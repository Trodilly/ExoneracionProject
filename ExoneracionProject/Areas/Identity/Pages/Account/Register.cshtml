        document.getElementById('here').insertAdjacentHTML('beforeend', newForm)
    }


    document.getElementById("ButtonSubmit").addEventListener("click", function (event) {
        var from = $("#inidate").val();
        var to = $("#enddate").val();


        if (Date.parse(from) > Date.parse(to) || Date.parse(To) < Date.parse(from)) {
            alert("Rango de fecha invalido");
            event.preventDefault();
            location.reload();
        }
    })

</script>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
